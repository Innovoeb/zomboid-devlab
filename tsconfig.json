{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "target": "ESNext",
    "types": [
      "lua-types/5.1",
      "@shughesuk/pipewrench",
      // "@shughesuk/pipewrench-events"
    ]
  },
  "tstl": {
    "luaLibImport": "require",
    "noHeader": true,
    "tstlVerbose": true,
    "luaPlugins": [
      {
        "name": "@shughesuk/tstl-pipewrench"
      },
    ]
  },
  "include": [
    "src",
  ]
}